{
  "name": "opencode-boomerang",
  "version": "0.2.3",
  "private": true,
  "description": "OpenCode Orchestrator monorepo - plugin and dashboard",
  "workspaces": [
    "orchestra",
    "app",
    "desktop"
  ],
  "scripts": {
    "build": "cd orchestra && bun run build",
    "dev": "cd orchestra && bun run dev",
    "typecheck": "cd orchestra && bun run typecheck",
    "test": "cd orchestra && bun run test",
    "app:dev": "cd app && bun run dev",
    "app:build": "cd app && bun run build",
    "app:install": "cd app && bun install",
    "desktop:dev": "cd desktop && bun run dev",
    "desktop:build": "cd desktop && bun run build",
    "desktop:tauri": "cd desktop && bun run tauri",
    "lint": "biome check .",
    "lint:fix": "biome check . --write"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/open-orchestra/open-orchestra"
  }
}
