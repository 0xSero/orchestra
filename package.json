{
  "name": "opencode-workspace",
  "private": true,
  "type": "module",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev:min": "bun run --cwd packages/orchestrator build:watch",
    "audit": "bun audit",
    "lint": "bunx @biomejs/biome lint .",
    "format": "bunx @biomejs/biome format . --write",
    "format:check": "bunx @biomejs/biome format .",
    "typecheck:plugin": "cd packages/orchestrator && bun run typecheck",
    "typecheck:control-panel": "cd apps/control-panel && bun run typecheck",
    "typecheck:desktop": "cd apps/desktop && bun run typecheck",
    "typecheck": "bun run typecheck:plugin && bun run typecheck:control-panel && bun run typecheck:desktop",
    "test:unit": "cd packages/orchestrator && bun test ./test/unit",
    "test:integration": "cd packages/orchestrator && bun test ./test/integration",
    "test:e2e": "cd packages/orchestrator && bun test ./test/e2e",
    "test:optional": "cd packages/orchestrator && bun test ./test/optional",
    "test:stress": "cd packages/orchestrator && bun test ./test/stress/*.stress.ts",
    "test:plugin": "cd packages/orchestrator && bun test ./test/unit && bun test ./test/integration",
    "test:control-panel": "cd apps/control-panel && bun run test",
    "test": "bun run test:plugin && bun run test:control-panel",
    "build:plugin": "cd packages/orchestrator && bun run build",
    "build:control-panel": "cd apps/control-panel && bun run build",
    "build:desktop": "cd apps/desktop && bun run build",
    "build": "bun run build:plugin && bun run build:control-panel && bun run build:desktop",
    "bench": "cd packages/orchestrator && bun run bench",
    "check": "bun run audit && bun run format:check && bun run lint && bun run typecheck && bun run test && bun run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
}
