{
  "name": "opencode-orchestrator",
  "version": "0.2.3",
  "description": "Multi-agent orchestrator plugin for OpenCode - spawn, manage, and coordinate specialized AI workers",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "schema",
    "scripts",
    "README.md"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node --external @opencode-ai/sdk --external @opencode-ai/plugin --external zod && cp scripts/worker-bridge-plugin.mjs dist/worker-bridge-plugin.mjs",
    "dev": "bun --watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:real": "bun test test/integration/linear-real.test.ts test/integration/neo4j-real.test.ts"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.0.164",
    "@opencode-ai/sdk": "^1.0.164",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.5.0",
    "neo4j-driver": "^6.0.1",
    "posthog-node": "^5.17.4",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-types": "^1.3.5",
    "typescript": "^5.0.0",
    "zod": "^4.2.1"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "opencode",
    "ai",
    "agents",
    "orchestrator",
    "multi-agent",
    "plugin"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sero/opencode-orchestrator"
  }
}
