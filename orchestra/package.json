{
  "name": "open-orchestra",
  "version": "0.2.4",
  "description": "Multi-agent orchestrator plugin for OpenCode - spawn, manage, and coordinate specialized AI workers",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "open-orchestra": "./scripts/install.mjs"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./schema/orchestrator.schema.json": "./schema/orchestrator.schema.json",
    "./worker-bridge-plugin.mjs": "./dist/worker-bridge-plugin.mjs"
  },
  "files": [
    "dist",
    "schema",
    "scripts/install.mjs",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun run build:types && bun build ./src/index.ts --outdir ./dist --target bun --external @opencode-ai/sdk --external @opencode-ai/plugin --external zod && if [ -f scripts/worker-bridge-plugin.mjs ]; then cp scripts/worker-bridge-plugin.mjs dist/worker-bridge-plugin.mjs; fi",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "dev": "bun --watch src/index.ts",
    "package:check": "node scripts/package-check.mjs",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist && rm -rf node_modules/.cache",
    "test": "bun test",
    "test:real": "bun test test/integration/linear-real.test.ts test/integration/neo4j-real.test.ts"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.0.203",
    "@opencode-ai/sdk": "^1.0.203",
    "neo4j-driver": "^6.0.1",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-types": "^1.3.5",
    "typescript": "^5.0.0",
    "zod": "^4.2.1"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "opencode",
    "ai",
    "agents",
    "orchestrator",
    "multi-agent",
    "plugin"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/open-orchestra/open-orchestra"
  },
  "publishConfig": {
    "access": "public"
  }
}
