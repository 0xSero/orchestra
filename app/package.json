{
  "name": "@opencode-orchestrator/control-panel",
  "version": "0.3.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run dev:server & bun run dev:web",
    "dev:server": "bun --watch server/index.ts",
    "dev:web": "vite --config web/vite.config.ts",
    "build": "vite build --config web/vite.config.ts && bun build server/index.ts --outdir dist/server --target bun",
    "start": "NODE_ENV=production bun dist/server/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.6.0",
    "ai": "^4.0.0",
    "@ai-sdk/react": "^1.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zustand": "^5.0.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.5.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0"
  }
}
